<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.fastfooddiet.view.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/to_foodListFragment"
            app:destination="@id/foodListFragment" />
        <action
            android:id="@+id/to_categoryFragment"
            app:destination="@id/categoryFragment">
            <argument
                android:name="header"
                app:argType="string"
                android:defaultValue="Search" />
            <argument
                android:name="CategoryType"
                app:argType="com.example.fastfooddiet.view.CategoryFragment$CategoryType"
                android:defaultValue="RESTAURANT" />
            <argument
                android:name="forResult"
                app:argType="boolean"
                android:defaultValue="false" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.fastfooddiet.view.CategoryFragment"
        android:label="CategoryFragment"
        tools:layout="@layout/fragment_category">
        <action
            android:id="@+id/to_foodListFragment"
            app:destination="@id/foodListFragment" />
    </fragment>

    <fragment
        android:id="@+id/foodListFragment"
        android:name="com.example.fastfooddiet.view.FoodListFragment"
        android:label="FoodListFragment"
        tools:layout="@layout/fragment_food_list">
        <action
            android:id="@+id/to_detailFragment"
            app:destination="@id/detailFragment" />
        <argument
            android:name="header"
            android:defaultValue="Search"
            app:argType="string" />
        <argument
            android:name="showOnlyFavorite"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="showAllResultsDefault"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="expandSearchView"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="searchParams"
            android:defaultValue="@null"
            app:argType="com.example.fastfooddiet.data.SearchParams"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.fastfooddiet.view.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="foodId"
            app:argType="integer" />
    </fragment>

    <navigation
        android:id="@+id/nav_advanced_search"
        app:startDestination="@id/advancedSearchFragment" >
        <fragment
            android:id="@+id/advancedSearchFragment"
            android:name="com.example.fastfooddiet.view.AdvancedSearchFragment"
            android:label="AdvancedSearchFragment"
            tools:layout="@layout/fragment_advanced_search">
            <action
                android:id="@+id/to_advancedCategoryList"
                app:destination="@id/advancedCategoryListFragment" />
        </fragment>

        <fragment
            android:id="@+id/advancedCategoryListFragment"
            android:name="com.example.fastfooddiet.view.AdvancedCategoryListFragment"
            android:label="AdvancedCategoryListFragment"
            tools:layout="@layout/fragment_category">
            <argument
                android:name="header"
                app:argType="string"
                android:defaultValue="Search" />
            <argument
                android:name="CategoryType"
                app:argType="com.example.fastfooddiet.view.CategoryFragment$CategoryType"
                android:defaultValue="RESTAURANT"/>
        </fragment>

    </navigation>

    <fragment
        android:id="@+id/customSearchFragment"
        android:name="com.example.fastfooddiet.view.CustomSearchFragment"
        android:label="CustomSearchFragment"
        tools:layout="@layout/fragment_custom_search">
        <action
            android:id="@+id/to_categorySelectDialogFragment"
            app:destination="@id/categorySelectDialogFragment" />
        <action
            android:id="@+id/to_numberSelectDialogFragment"
            app:destination="@id/numberSelectDialogFragment" />
    </fragment>

    <dialog
        android:id="@+id/categorySelectDialogFragment"
        android:name="com.example.fastfooddiet.dialog.CategorySelectDialogFragment"
        android:label="CategorySelectDialogFragment">
        <argument
            android:name="items"
            app:argType="string[]" />
        <argument
            android:name="checkedItems"
            app:argType="boolean[]" />
        <argument
            android:name="isRestaurant"
            app:argType="boolean"
            android:defaultValue="true" />
    </dialog>

    <navigation
        android:id="@+id/nav_custom_search"
        app:startDestination="@id/customSearchFragment" >
    </navigation>

    <dialog
        android:id="@+id/numberSelectDialogFragment"
        android:name="com.example.fastfooddiet.dialog.NumberSelectDialogFragment"
        android:label="NumberSelectDialogFragment" >
        <argument
            android:name="maxKey"
            app:argType="string" />
        <argument
            android:name="minKey"
            app:argType="string" />
        <argument
            android:name="isMax"
            app:argType="boolean" />
    </dialog>

</navigation>