<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.fastfooddiet.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_searchListFragment"
            app:destination="@id/searchListFragment" />
        <action
            android:id="@+id/action_mainFragment_to_advancedSearchFragment"
            app:destination="@id/advancedSearchFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchListFragment"
        android:name="com.example.fastfooddiet.SearchListFragment"
        android:label="SearchListFragment"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_searchListFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <argument
            android:name="header"
            app:argType="string"
            android:defaultValue="Search" />
        <argument
            android:name="searchType"
            app:argType="com.example.fastfooddiet.SearchListFragment$SearchType"
            android:defaultValue="FOOD" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.fastfooddiet.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="foodId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/advancedSearchFragment"
        android:name="com.example.fastfooddiet.AdvancedSearchFragment"
        android:label="AdvancedSearchFragment"
        tools:layout="@layout/fragment_advanced_search">
        <action
            android:id="@+id/action_advancedSearchFragment_to_searchListFragment"
            app:destination="@id/searchListFragment" />
    </fragment>

</navigation>