<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="header"
            type="String" />
    </data>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/list_frag_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgRed"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title=" "
        tools:navigationIcon="?homeAsUpIndicator">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/list_frag_searchView"
            style="@style/Widget.AppCompat.Light.SearchView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:queryHint="@android:string/search_go"
            app:searchHintIcon="@null" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/list_frag_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginBottom="16sp"
        android:fontFamily="@font/roboto_light"
        android:text="@{header}"
        android:textSize="18sp"
        tools:text="Search Results" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_frag_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/list_item_food" />
</LinearLayout>
</layout>