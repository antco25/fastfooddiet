<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.fastfooddiet.view.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_foodListFragment"
            app:destination="@id/foodListFragment" />
        <action
            android:id="@+id/action_mainFragment_to_advancedSearchFragment"
            app:destination="@id/advancedSearchFragment" />
        <action
            android:id="@+id/action_mainFragment_to_categoryListFragment"
            app:destination="@id/categoryListFragment" />
    </fragment>

    <fragment
        android:id="@+id/foodListFragment"
        android:name="com.example.fastfooddiet.view.FoodListFragment"
        android:label="FoodListFragment"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_foodListFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <argument
            android:name="header"
            android:defaultValue="Search"
            app:argType="string" />
        <argument
            android:name="showOnlyFavorite"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="showAllResultsDefault"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="showKeyboardOnEnter"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="searchParams"
            android:defaultValue="@null"
            app:argType="com.example.fastfooddiet.data.SearchParams"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.fastfooddiet.view.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="foodId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/advancedSearchFragment"
        android:name="com.example.fastfooddiet.view.AdvancedSearchFragment"
        android:label="AdvancedSearchFragment"
        tools:layout="@layout/fragment_advanced_search">
        <action
            android:id="@+id/action_advancedSearchFragment_to_foodListFragment"
            app:destination="@id/foodListFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoryListFragment"
        android:name="com.example.fastfooddiet.view.CategoryListFragment"
        android:label="CategoryListFragment"
        tools:layout="@layout/fragment_cat_list">
        <argument
            android:name="header"
            app:argType="string"
            android:defaultValue="Search" />
        <action
            android:id="@+id/action_categoryListFragment_to_foodListFragment"
            app:destination="@id/foodListFragment" />
        <argument
            android:name="Category"
            app:argType="com.example.fastfooddiet.view.CategoryListFragment$Category"
            android:defaultValue="RESTAURANT" />
    </fragment>

</navigation>