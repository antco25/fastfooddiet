<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/filter_restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4sp"
        android:layout_marginBottom="24sp"
        android:text="Select Restaurants"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/filter_foodType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4sp"
        android:layout_marginBottom="24sp"
        android:text="Select Food Types"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/filter_min_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Min Calories"
        android:inputType="number"/>

    <EditText
        android:id="@+id/filter_max_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Max Calories"
        android:inputType="number" />

    <Switch
        android:id="@+id/filter_favorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24sp"
        android:layout_marginBottom="24sp"
        android:text="Favorites" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search" />

</LinearLayout>
</layout>