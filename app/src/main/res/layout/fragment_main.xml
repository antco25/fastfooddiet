<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="fragment"
            type="com.example.fastfooddiet.view.MainFragment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/background"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/hguide_45"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/main_frag_toolbar"
                app:srcCompat="@drawable/dr_circle_background" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/main_frag_toolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/main_searchview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingEnd="12dp"
                    app:srcCompat="@drawable/ic_search_24dp" />

            </androidx.appcompat.widget.Toolbar>

            <include
                android:id="@+id/logo"
                layout="@layout/logo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignParentTop="true"
                app:layout_constraintBottom_toTopOf="@+id/hguide_30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/hguide_10" />

            <TextView
                android:id="@+id/text_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_light"
                android:text="Fast Food Diet"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo" />

            <TextView
                android:id="@+id/main_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:drawableTop="@drawable/ic_favorites"
                android:drawablePadding="8sp"
                android:fontFamily="@font/roboto_light"
                android:text="Favorites"
                android:textAlignment="center"
                android:textAllCaps="false"
                app:layout_constraintEnd_toStartOf="@+id/vguide_90"
                app:layout_constraintStart_toStartOf="@+id/vguide_58"
                app:layout_constraintTop_toTopOf="@+id/hguide_45" />

            <TextView
                android:id="@+id/main_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:drawableTop="@drawable/ic_restaurant"
                android:drawablePadding="8sp"
                android:fontFamily="@font/roboto_light"
                android:text="Browse Restaurants"
                android:textAlignment="center"
                android:onClick="@{() -> fragment.toCategoryListFragment()}"
                app:autoSizeTextType="none"
                app:layout_constraintEnd_toStartOf="@+id/vguide_43"
                app:layout_constraintStart_toStartOf="@+id/vguide_10"
                app:layout_constraintTop_toTopOf="@+id/hguide_45" />

            <TextView
                android:id="@+id/main_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:drawableTop="@drawable/ic_settings"
                android:drawablePadding="8sp"
                android:fontFamily="@font/roboto_light"
                android:text="Settings"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/vguide_90"
                app:layout_constraintStart_toStartOf="@+id/vguide_58"
                app:layout_constraintTop_toBottomOf="@+id/main_fav"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/main_csearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:drawableTop="@drawable/ic_search"
                android:fontFamily="@font/roboto_light"
                android:text="Custom Search"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/vguide_43"
                app:layout_constraintStart_toStartOf="@+id/vguide_10"
                app:layout_constraintTop_toBottomOf="@+id/main_rest"
                app:layout_constraintVertical_bias="0.0"
                android:drawablePadding="8sp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/hguide_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible"
                app:layout_constraintGuide_percent="0.1"
                tools:visibility="gone" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/hguide_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3"
                tools:visibility="gone" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/hguide_45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.4" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vguide_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vguide_43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.43" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vguide_58"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.58" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vguide_90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9" />


        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>