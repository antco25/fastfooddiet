<?xml version="1.0" encoding="utf-8"?>
<!--TODO: Support different screen sizes -->
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline_0.3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rounded_corner" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_frag_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundRed"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:lines="1"
            android:text="Fast Food Diet"
            android:textAlignment="textStart"
            android:textColor="@color/primary_text_default_material_dark"
            app:autoSizeMaxTextSize="36sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@+id/guideline_0.15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_frag_toolbar" />

        <TextView
            android:id="@+id/header1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/roboto_light"
            android:text="Search Menu Items"
            android:textColor="@color/secondary_text_default_material_dark"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/main_frag_searchView"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/main_frag_searchView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="?attr/editTextBackground"
            android:backgroundTint="@color/abc_secondary_text_material_dark"
            android:fontFamily="@font/roboto_thin"
            android:text="Big Mac, Whopper, Footlong"
            android:textColor="@color/white_50a"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@+id/guideline_0.3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/searchView_icon"
            app:layout_constraintTop_toTopOf="@+id/guideline_0.22" />

        <ImageView
            android:id="@+id/searchView_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_frag_searchView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_frag_searchView"
            app:srcCompat="@drawable/ic_search_24dp" />

        <TextView
            android:id="@+id/header2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="bottom"
            android:text="Browse Menu Items"
            android:textSize="18sp"
            app:autoSizeTextType="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline_0.3" />

        <ImageView
            android:id="@+id/main_frag_button_restaurants"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            app:layout_constraintEnd_toStartOf="@+id/main_frag_button_foodType"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header2"
            app:srcCompat="@drawable/restaurant" />

        <TextView
            android:id="@+id/caption_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="By Restaurant"
            app:layout_constraintEnd_toEndOf="@+id/main_frag_button_restaurants"
            app:layout_constraintStart_toStartOf="@+id/main_frag_button_restaurants"
            app:layout_constraintTop_toBottomOf="@+id/main_frag_button_restaurants" />

        <ImageView
            android:id="@+id/main_frag_button_foodType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/main_frag_button_restaurants"
            app:layout_constraintTop_toBottomOf="@+id/header2"
            app:srcCompat="@drawable/foodtype" />

        <TextView
            android:id="@+id/caption_foodType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="By Type"
            app:layout_constraintEnd_toEndOf="@+id/main_frag_button_foodType"
            app:layout_constraintStart_toStartOf="@+id/main_frag_button_foodType"
            app:layout_constraintTop_toBottomOf="@+id/main_frag_button_foodType" />

        <ImageView
            android:id="@+id/main_frag_button_advancedSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
            app:layout_constraintEnd_toStartOf="@+id/main_frag_button_favorites"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/caption_restaurant"
            app:layout_constraintVertical_bias="0.30"
            app:srcCompat="@drawable/search" />

        <TextView
            android:id="@+id/caption_advancedSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="Advanced Search"
            app:layout_constraintEnd_toEndOf="@+id/main_frag_button_advancedSearch"
            app:layout_constraintStart_toStartOf="@+id/main_frag_button_advancedSearch"
            app:layout_constraintTop_toBottomOf="@+id/main_frag_button_advancedSearch" />

        <ImageView
            android:id="@+id/main_frag_button_favorites"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/main_frag_button_advancedSearch"
            app:layout_constraintTop_toBottomOf="@+id/caption_foodType"
            app:layout_constraintVertical_bias="0.30"
            app:srcCompat="@drawable/favorites" />

        <TextView
            android:id="@+id/caption_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="Favorites"
            app:layout_constraintEnd_toEndOf="@+id/main_frag_button_favorites"
            app:layout_constraintStart_toStartOf="@+id/main_frag_button_favorites"
            app:layout_constraintTop_toBottomOf="@+id/main_frag_button_favorites" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/menu_navigation" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_0.15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_0.22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.22" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>